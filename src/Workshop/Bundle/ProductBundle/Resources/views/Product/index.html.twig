{% extends 'WorkshopProductBundle::layout.html.twig' %}

{% block body -%}
    <h1>Product list</h1>

    <table class="table table-striped records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Img</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td class="preview_image">
                    {% if not entity.img  %}
                        <img src="unknown.png" class="img-responsive">
                    {% else %}
                        <img src="upload/{{ entity.img }}" class="img-responsive">
                    {% endif %}
                </td>
                <td>
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path('_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <div id="navigation">
        {{ knp_pagination_render(entities,'WorkshopProductBundle:Pagination:pagination.html.twig') }}
    </div>
{% endblock %}
